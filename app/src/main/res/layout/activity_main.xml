<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="146dp"
        android:layout_height="37dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="84dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Pulsa boton para devolver un Objeto"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button


        android:id="@+id/boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="267dp"
        android:layout_marginTop="-45dp"
        android:background="#B428A852"
        android:shadowColor="#00897B"
        android:text="BOTON"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView

        android:id="@+id/textoDevuelta"
        android:layout_width="360dp"
        android:layout_height="37dp"
        android:layout_below="@+id/boton"
        android:layout_alignEnd="@id/boton"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="-36dp"
        android:background="#48C50000"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="                     "
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/devuelve"
        android:lineHeight="89dp"
        app:layout_constraintTop_toTopOf="parent" />

    </android.widget.RelativeLayout>
